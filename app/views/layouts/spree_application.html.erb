<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= @page_title %> | Railsdog Radio</title>

  <meta name="description" content="">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <link  href="http://fonts.googleapis.com/css?family=Arvo:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css" >
  <%= stylesheet_link_tag 'reset', 'typography', 'misc', 'screen', 'homepage', 'taxonomy', 'product', 'cart', 'checkout' %>
  <link rel="stylesheet" href="/stylesheets/jquery.mobile-1.0a2.css">

  <script src="/javascripts/libs/modernizr-1.6.min.js"></script>

</head>

<body id="<%= @body_id || controller.controller_name %>">
  <div id="container">

    <header>
      <%= link_to image_tag("dogradio/logo.png", :width => "300", :height => "58", :alt => "Rails Dog Radio", :id => "logo"), root_url %>
      <form action="#" >
        <input type="search" id="s1" placeholder="Search Railsdog Radio">
      </form>
      <nav>
        <%= link_to "products", products_path %>
        <a href="#">help</a>
        <% if current_user %>
          <%= link_to t('my_account'), account_path, :class => "cart" %>
          <%= link_to t('logout'), destroy_user_session_path, :class => "cart" %>
        <% else %>
          <%= link_to t('log_in'), login_path, :class => "cart" %>
        <% end %>
        <%= link_to_cart %>
      </nav>
    </header>

    <% if content_for?(:banner) %>
      <div id="banner" role="banner">
        <%= yield :banner %>
      </div>
    <% end %>

    <div id="main" role="main">
      <%= yield %>
    </div>

    <% if content_for?(:sidebar) %>
      <div id="sidebar" role="sidebar">
        <%= yield :sidebar %>
      </div>
    <% end %>


  </div>



  <footer>
    <div class="inner">

      <img src="/images/dogradio/kid.jpg" width="204" height="413" alt="Kid" id="kid">

      <div id="about-railsdog-radio">
        <div>
          <p>
            <strong>Railsdog Radio</strong> has been selling the widest selection of
            satellite radio gear since 2004. With a passion for satellite radio products and programming,
            we have provided helpful service, fast shipping and a range of parts to over 250,000 happy customers.
          </p>
          <p id="more-about-railsdog-radio">
            <a href="/about">More about Railsdog Radio ></a>
          </p>
        </div>
      </div>

      <div id="contact-us">
        <h3>Contact Us</h3>
        <p>
        (301)560-2000<br>
        <a href="mailto:sales@railsdogradio.com">sales@railsdogradio.com</a>
        </p>
      </div>

      <div id="social">
        <h3>Social</h3>
        <p>
        <a href="#" id="facebook"><span>Facebook</span></a>
        <a href="#" id="rss"><span>RSS</span></a>
        <a href="#" id="twitter"><span>Twitter</span></a>
        </p>
      </div>

      <div id="menu">
        <h3>Menu</h3>
        <p>
        <a href="#">About us</a><br />
        <a href="#">Privacy policy</a>
        </p>
      </div>

      <p id="copyright">&copy; Copyright 2010 Railsdog Radio. All rights reserved</p>

    </div>
  </footer>



