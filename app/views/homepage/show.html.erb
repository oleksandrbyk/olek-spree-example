<div id="taxons" class="clearfix">
  <% @product_groups.each do |group| %>
    <% url = pg_search_path(:product_group_name => group.permalink) %>
    <div class="taxon">
      <h3><%= link_to group.name, url %></h3>
      <%= link_to url do %>
        <%= image_tag("dogradio/homepage/taxons/#{group.permalink}.jpg", :class => "image", :alt => group.name) %><br>
      <% end %>
      <%= link_to 'View More', url, :class => 'button' %>
    </div>
  <% end %>
</div>

<div id="all-products">
  <h2>All Products</h2>
  <div class="left">
    <ul>
      <% @taxons.each_with_index do |taxon,i| %>
        <% next if i % 2 == 0 %>
        <li><%= link_to taxon.name, seo_url(taxon) %></li>
      <% end %>
    </ul>
  </div>
  <div class="right">
    <ul>
      <% @taxons.each_with_index do |taxon,i| %>
        <% next if i % 2 == 1 %>
        <li><%= link_to taxon.name, seo_url(taxon) %></li>
      <% end %>
    </ul>
  </div>
</div>

