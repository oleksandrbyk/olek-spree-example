<% @body_id = 'product-list' %>

<%= render 'shared/product_banner' %>

<%= breadcrumbs(:taxon => @taxon, :product => @product, :product_group => @product_group) %>

<% content_for :sidebar do %>
  <%= render 'shared/all_products' %>
  <%= render 'shared/recently_viewed_products' %>
<% end %>

<% if params[:keywords] %>

  <% if @products.empty? %>
    <%= t(:no_products_found) %>
  <% else %>
    <%= render "shared/products", :products => @products, :taxon => @taxon %>
  <% end %>

<% else %>

  <%= render "shared/products", :products => @products, :taxon => @taxon %>

<% end %>

