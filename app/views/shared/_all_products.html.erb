<div id="all-products" class="list-box">
  <% if @taxon.present? && @taxon.children.present? %>
    <h2>More Products</h2>
    <ul>
      <% @taxon.children.each_with_index do |taxon,i| %>
        <li><%= raw link_to(taxon.name, seo_url(taxon)) %></li>
      <% end %>
    </ul>
  <% else %>
    <h2>All Products</h2>
    <ul>
      <% @taxons.each_with_index do |taxon,i| %>
        <li><%= raw link_to(taxon.name, seo_url(taxon)) %></li>
      <% end %>
    </ul>
  <% end %>
</div>
